<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <include  layout="@layout/toolbar_title" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F2F3F7">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/dp_10"
                android:layout_height="wrap_content">
                <View
                    android:layout_width="@dimen/dp_3"
                    android:layout_height="@dimen/dp_22"
                    android:layout_marginRight="@dimen/dp_10"
                    android:background="#1976D2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设备检查"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_18" />
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_inspect_equip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginTop="@dimen/dp_10"
                android:background="#DDDDDD"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/dp_10"
                android:layout_height="wrap_content">
                <View
                    android:layout_width="@dimen/dp_3"
                    android:layout_height="@dimen/dp_22"
                    android:layout_marginRight="@dimen/dp_10"
                    android:background="#1976D2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="信号状态"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_18" />
            </LinearLayout>
            <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:text="有线网络状态"
            android:textColor="#666666"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_15"
            android:textSize="@dimen/sp_18"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1" />
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10"
                android:background="@color/white"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/rb_dianxin"
                    android:layout_width="@dimen/dp_0"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:text="电信"/>
                <RadioButton
                    android:id="@+id/rb_yidong"
                    android:layout_width="@dimen/dp_0"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:text="移动"/>
                <RadioButton
                    android:id="@+id/rb_liantong"
                    android:layout_width="@dimen/dp_0"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:text="联通"/>
                <RadioButton
                    android:id="@+id/rb_gehua"
                    android:layout_width="@dimen/dp_0"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:text="歌华"/>
            </RadioGroup>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_3" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:text="无线网络状态"
                android:textColor="#666666"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10"
                android:paddingLeft="@dimen/dp_15"
                android:textSize="@dimen/sp_18"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1" />
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10"
                android:background="@color/white"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/rb_Ndianxin"
                    android:layout_width="@dimen/dp_0"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:text="电信"/>
                <RadioButton
                    android:id="@+id/rb_Nyidong"
                    android:layout_width="@dimen/dp_0"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:text="移动"/>
                <RadioButton
                    android:id="@+id/rb_Nliantong"
                    android:layout_width="@dimen/dp_0"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:text="联通"/>
            </RadioGroup>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_3" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:text="手机信号"
                android:textColor="#666666"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10"
                android:paddingLeft="@dimen/dp_15"
                android:textSize="@dimen/sp_18"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1" />
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10"
                android:background="@color/white"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/rb_phone4G"
                    android:layout_width="@dimen/dp_0"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:text="有4G"/>
                <RadioButton
                    android:id="@+id/rb_Nphone4G"
                    android:layout_width="@dimen/dp_0"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:text="无4G"/>
            </RadioGroup>
            <View
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="#DDDDDD"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/dp_10"
                android:layout_height="wrap_content">
                <View
                    android:layout_width="@dimen/dp_3"
                    android:layout_height="@dimen/dp_22"
                    android:layout_marginRight="@dimen/dp_10"
                    android:background="#1976D2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="环境状态"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_18" />
            </LinearLayout>
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10"
                android:background="@color/white"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/rb_environment_good"
                    android:layout_width="@dimen/dp_0"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:text="好"/>
                <RadioButton
                    android:id="@+id/rb_environment_yiban"
                    android:layout_width="@dimen/dp_0"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:text="一般"/>
                <RadioButton
                    android:id="@+id/rb_environment_bad"
                    android:layout_width="@dimen/dp_0"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:text="差"/>
            </RadioGroup>
            <View
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="#DDDDDD"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/dp_10"
                android:layout_height="wrap_content">
                <View
                    android:layout_width="@dimen/dp_3"
                    android:layout_height="@dimen/dp_22"
                    android:layout_marginRight="@dimen/dp_10"
                    android:background="#1976D2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="特殊问题"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_18" />
            </LinearLayout>
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10"
                android:background="@color/white"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/rb_special_banqian"
                    android:layout_width="@dimen/dp_0"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:text="需搬迁"/>
                <RadioButton
                    android:id="@+id/rb_special_fengcun"
                    android:layout_width="@dimen/dp_0"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:text="需封存"/>
                <RadioButton
                    android:id="@+id/rb_special_chaichu"
                    android:layout_width="@dimen/dp_0"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:text="需拆除"/>
                <RadioButton
                    android:id="@+id/rb_special_huifu"
                    android:layout_width="@dimen/dp_0"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:text="待恢复"/>
            </RadioGroup>
            <View
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="#DDDDDD"/>
            <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/dp_10"
            android:layout_height="wrap_content">
            <View
                android:layout_width="@dimen/dp_3"
                android:layout_height="@dimen/dp_22"
                android:layout_marginRight="@dimen/dp_10"
                android:background="#1976D2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="清扫照片"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_18" />
        </LinearLayout>
            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <FrameLayout
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="69dp"
                    android:layout_marginRight="@dimen/dp_10"
                    android:background="@drawable/img_add">
                    <ImageView
                        android:id="@+id/img_clean1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerInside"
                        android:src="@mipmap/add"/>
                </FrameLayout>
                <FrameLayout
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="69dp"
                    android:layout_marginRight="@dimen/dp_10"
                    android:background="@drawable/img_add">
                    <ImageView
                        android:id="@+id/img_clean2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerInside"
                        android:src="@mipmap/add"/>
                </FrameLayout>
                <FrameLayout
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="69dp"
                    android:background="@drawable/img_add">
                    <ImageView
                        android:id="@+id/img_clean3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerInside"
                        android:src="@mipmap/add"/>
                </FrameLayout>
            </LinearLayout>
            <View
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="#DDDDDD"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/dp_10"
                android:layout_height="wrap_content">
                <View
                    android:layout_width="@dimen/dp_3"
                    android:layout_height="@dimen/dp_22"
                    android:layout_marginRight="@dimen/dp_10"
                    android:background="#1976D2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="巡检备注"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_18" />
            </LinearLayout>
            <EditText
                android:id="@+id/ed_content"
                android:layout_width="@dimen/dp_348"
                android:layout_height="@dimen/dp_81"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:hint="*编辑备注巡检详情"
                android:gravity="start"
                android:textSize="@dimen/sp_16"
                android:background="@drawable/ed_content"/>
            <TextView
                android:layout_width="@dimen/dp_355"
                android:layout_height="@dimen/dp_45"
                android:textSize="@dimen/sp_18"
                android:layout_margin="@dimen/dp_20"
                android:text="提交工单"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/bt_login"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>