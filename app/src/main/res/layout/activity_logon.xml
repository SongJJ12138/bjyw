<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#F2F3F7"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="@dimen/dp_150"
        android:layout_height="@dimen/dp_150"
        android:layout_marginTop="@dimen/dp_80"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/logo"/>
    <LinearLayout
        android:id="@+id/layout_name"
        android:layout_below="@id/img_logo"
        android:layout_marginTop="@dimen/dp_80"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_40"
        android:layout_marginRight="@dimen/dp_40"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/dp_26"
            android:layout_height="@dimen/dp_21"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dp_5"
            android:src="@mipmap/username"/>
        <FrameLayout
            android:paddingLeft="@dimen/dp_10"
            android:layout_gravity="center"
            android:layout_width="@dimen/dp_0"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/activity_login_edname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:textSize="@dimen/sp_16"
                android:hint="手机号码"/>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/login_nameerror"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="格式有误"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/red" />
                <ImageView
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="@dimen/dp_18"
                    android:src="@mipmap/warning"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_5"/>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
    <View
        android:layout_below="@id/layout_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_40"
        android:layout_marginRight="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_5"
        android:alpha="0.5"
        android:background="@color/dimgray"/>
    <LinearLayout
        android:id="@+id/layout_password"
        android:layout_below="@id/layout_name"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_40"
        android:layout_marginRight="@dimen/dp_40"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/dp_26"
            android:layout_height="@dimen/dp_21"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dp_5"
            android:src="@mipmap/password"/>
        <FrameLayout
            android:paddingLeft="@dimen/dp_10"
            android:layout_gravity="center"
            android:layout_width="@dimen/dp_0"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/activity_login_edpassword"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_16"
                android:hint="登录密码"/>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/login_passworderror"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="格式有误"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/red" />
                <ImageView
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="@dimen/dp_18"
                    android:src="@mipmap/warning"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_5"/>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/activity_view_password"
        android:layout_below="@id/layout_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_40"
        android:layout_marginRight="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_5"
        android:alpha="0.5"
        android:background="@color/dimgray"/>
    <TextView
        android:id="@+id/activity_login_btlogin"
        android:layout_below="@id/layout_password"
        android:layout_marginTop="@dimen/dp_50"
        android:layout_centerHorizontal="true"
        android:layout_width="@dimen/dp_316"
        android:layout_height="@dimen/dp_46"
        android:background="@drawable/bt_login"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_19"
        android:gravity="center"/>
</RelativeLayout>