<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="@dimen/dp_303"
    android:layout_gravity="center"
    android:background="@drawable/dialog_layout"
    android:layout_height="@dimen/dp_410">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="@drawable/dialog_title"
        android:text="通知"
        android:textColor="@color/white"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="19sp"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fadingEdge="none"
        android:overScrollMode="never">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:textSize="19sp" />
            <TextView
                android:id="@+id/content"
                android:padding="@dimen/dp_4"
                android:background="@color/lightslategrey"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dp_10"
                android:text=""
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        android:text="发布日期："
        android:textColor="@color/black"
        android:layout_gravity="right"
        android:textSize="16sp" />
</LinearLayout>