<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/layout_power"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_margin="10dp"
            android:text="供电情况"/>
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="1dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:src="@mipmap/up"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="检查要点"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#666666"
            android:layout_margin="10dp"/>
        <TextView
            android:id="@+id/tv_power"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/tv_check"
            android:textColor="#73BFFF"
            android:textSize="14sp"
            android:text="1.本系统外接交流电源进线接线正常。\n2.万用表检查入口有220V±20%电压。"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="异常问题"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#666666"
            android:layout_margin="10dp"/>
        <RadioGroup
            android:id="@+id/rg_power"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
        <TextView
            android:id="@+id/title_powerpic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设备照片"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#666666"
            android:layout_margin="10dp"/>
        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <FrameLayout
                android:layout_width="156dp"
                android:layout_height="89dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/img_add">
                <ImageView
                    android:id="@+id/img_power1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerInside"
                    android:src="@mipmap/add"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="维修前"
                    android:textColor="#666666"
                    android:layout_gravity="right|bottom"
                    android:layout_margin="10dp"/>
            </FrameLayout>
            <FrameLayout
                android:layout_width="156dp"
                android:layout_height="89dp"
                android:background="@drawable/img_add">
                <ImageView
                    android:id="@+id/img_power2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerInside"
                    android:src="@mipmap/add"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="维修后"
                    android:textColor="#666666"
                    android:layout_gravity="right|bottom"
                    android:layout_margin="10dp"/>
            </FrameLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/title_powercontent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="备注问题"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#666666"
            android:layout_margin="10dp"/>
        <EditText
            android:id="@+id/ed_powercontent"
            android:layout_width="match_parent"
            android:layout_height="81dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/ed_content"/>
    </LinearLayout>
    <View
