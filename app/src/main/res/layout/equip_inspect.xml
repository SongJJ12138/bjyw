<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_5"
            android:background="@drawable/cirlce" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设备情况"
            android:textSize="@dimen/sp_17"
            android:textColor="@color/black"/>
    </LinearLayout>
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/dp_10">
        <RadioButton
            android:id="@+id/rb_have"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="有"/>
        <RadioButton
            android:id="@+id/rb_Nhave"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="无"/>
    </RadioGroup>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_5"
            android:background="@drawable/cirlce" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="检修参考"
            android:textSize="@dimen/sp_17"
            android:textColor="@color/black"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_equip_inspect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        android:background="@drawable/tv_check"
        android:textColor="#73BFFF"
        android:textSize="@dimen/sp_14"
        android:text="1.本系统外接交流电源进线接线正常。\n2.万用表检查入口有220V±20%电压。"/>
    <LinearLayout
        android:id="@+id/title_yichang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_5"
            android:background="@drawable/cirlce" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="异常问题"
            android:textSize="@dimen/sp_17"
            android:textColor="@color/black"/>
    </LinearLayout>
    <RadioGroup
        android:id="@+id/rg_equip_inspect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/dp_10"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_5"
            android:background="@drawable/cirlce" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="维修情况"
            android:textSize="@dimen/sp_17"
            android:textColor="@color/black"/>
    </LinearLayout>
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10">
        <RadioButton
            android:id="@+id/rb_repair_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_20"
            android:text="当日可维修"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_12"/>
        <RadioButton
            android:id="@+id/rb_repair_yiliu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="遗留问题"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_12"/>
    </RadioGroup>
</LinearLayout>