<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <include layout="@layout/toolbar_title"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:background="#1976D2"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:paddingLeft="30dp"
            android:textSize="16sp"
            android:hint="搜索"
            android:background="@drawable/ed_select"
            android:layout_margin="10dp"/>
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginLeft="18dp"
            android:layout_gravity="center_vertical|left"
            android:src="@mipmap/serch"/>
        <ImageView
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="center_vertical|right"
            android:src="@mipmap/delete"/>

    </FrameLayout>
    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/layout_site1">
    <TextView
        android:id="@+id/a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:text="共"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"/>
    <TextView
        android:id="@+id/collectsite_tv_updatesize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="32sp"
        android:textColor="@color/white"
        android:text="006"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_alignBottom="@+id/a"
        android:layout_toRightOf="@id/a"/>
    <TextView
        android:id="@+id/b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:text="个"
        android:layout_alignBottom="@+id/a"
        android:layout_toRightOf="@id/collectsite_tv_updatesize"/>
    <TextView
        android:id="@+id/c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:text="当前待更新台站"
        android:layout_below="@+id/a"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"/>
    <ImageView
        android:layout_width="41.44dp"
        android:layout_height="38.69dp"
        android:src="@mipmap/updatesite"
        android:layout_margin="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"/>
    <View
        android:id="@+id/d"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FAFAFA"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@id/c" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/collectsite_rv_updatesite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/d"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"/>
</RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/layout_site2">
        <TextView
            android:id="@+id/aa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:text="共"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:id="@+id/collectsite_tv_collectsize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="32sp"
            android:textColor="@color/white"
            android:text="006"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_alignBottom="@+id/aa"
            android:layout_toRightOf="@id/aa"/>
        <TextView
            android:id="@+id/bb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:text="个"
            android:layout_alignBottom="@+id/aa"
            android:layout_toRightOf="@id/collectsite_tv_collectsize"/>
        <TextView
            android:id="@+id/cc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:text="当前待采集台站"
            android:layout_below="@+id/aa"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"/>
        <ImageView
            android:layout_width="41.44dp"
            android:layout_height="38.69dp"
            android:src="@mipmap/collectsite"
            android:layout_margin="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"/>
        <View
            android:id="@+id/dd"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FAFAFA"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_below="@id/cc" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/collectsite_rv_collectsite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dd"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"/>
    </RelativeLayout>
</LinearLayout>